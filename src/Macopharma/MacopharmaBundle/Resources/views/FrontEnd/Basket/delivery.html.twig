{% extends 'MacopharmaMacopharmaBundle::layoutFrondEnd.html.twig' %}


{% block header %}
    {{ parent() }}
{% endblock  %}

{% block pagecontain %}
    <div class="span12">
        <h2>Livraison</h2>

        <div class="row">
            <div class="span12">
                <h2>Livraison</h2>
                <div id="collapseOne" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <div class="span4">
                            {% if user.adresse|length > 0 %}
                                <form action="{{ path('basket_validation') }}" method="POST">

                                    <h4>Adresse de livraison</h4>
                                    {% for adr in user.adresse %}
                                        <label class="radio">
                                            <input type="radio" name="livraison" value="{{ adr.id }}" {% if loop.index0 == 0 %}checked="checked"{% endif %}>
                                            {{ adr.rue }}, {{ adr.cp }} {{ adr.ville }} - {{ adr.pays }} <a href="{{ path('basket_deliveryAdresseSuppression', { 'id' : adr.id }) }}"><i class="icon-trash"></i></a>
                                            <br />
                                        </label>
                                    {% endfor %}

                                    <br /><br />

                                    <h4>Adresse de facturation</h4>
                                    {% for adr in user.adresse %}
                                        <label class="radio">
                                            <input type="radio" name="facturation" value="{{ adr.id }}" {% if loop.index0 == 0 %}checked="checked"{% endif %}>
                                            {{ adr.rue }}, {{ adr.cp }} {{ adr.ville }} - {{ adr.pays }} <a href="{{ path('basket_deliveryAdresseSuppression', { 'id' : adr.id }) }}"><i class="icon-trash"></i></a>
                                            <br />
                                        </label>
                                    {% endfor %}

                                    <br />

                                    <button class="btn btn-primary">Valider mes adresses</button>
                                </form>
                            {% endif %}
                        </div>


                        <div class="span4 offset2">
                            <h4>Ajouter une nouvelle adresse</h4>
                            <form action="{{ path('basket_delivery') }}" method="POST">
                                {{ form_widget(form) }}
                                <button class="btn btn-primary" type="submit">Ajouter</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}



